   <lightning:input
      type="checkbox"
      class="mqCheckbox"
      id="horizontal-checkbox-mq"
      label="Maintain Queue"
      name="input1"
      checked="{!v.maintainQueue}"
      onchange="{!c.handleMaintainQueueChange}"
      />
  <button class="slds-button slds-button_neutral">Current Queue</button>
